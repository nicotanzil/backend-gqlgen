type Game {
    id: Int!
    name: String!
    description: String!
    releaseDate: Time!
    genres: [Genre!]!
    tags: [Tag!]!
    originalPrice: Float!
    onSale: Boolean!
    discountPercentage: Int!
    gamePlayHour: Float!
    gameReviews: [Review!]!
    developers: [Developer!]!
    publisher: Publisher!
    system: System!
    users: [User!]!

    banner: String!
    video: String!
    image1: String!
    image2: String!
    image3: String!
    image4: String!

    createdAt: Time!
    updatedAt: Time!
    deletedAt: Time!
}

input NewGame {
    name: String!
    description: String!
    genres: [NewGenre!]!
    tags: [NewTag!]!
    originalPrice: Float!
    onSale: Boolean!
    discountPercentage: Int!
    developers: [NewDeveloper!]!
    publisher: NewPublisher!
    system: NewSystem!
}

extend type Query {
    games: [Game!]!
    getGamePaginationAdmin(page: Int): [Game!]!
}

extend type Mutation {
    createGame(input: NewGame!): Game!
}